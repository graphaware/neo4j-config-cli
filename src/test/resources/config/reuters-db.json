{
    "kind": "Database",
    "name": "reuters",
    "dropIfExists": "true",
    "indexes": {
      "nodes" : [
        {
          "labels": ["Article"],
          "properties": ["description", "text"],
          "name": "Article",
          "type": "FULLTEXT"
        },
        {
          "labels": ["Author"],
          "properties": ["name"],
          "type": "FULLTEXT"
        }
      ],
      "relationships": []
    },
    "constraints": {
      "nodes": [
        {
          "labels": ["Author"],
          "property": "name",
          "type": "UNIQUE"
        },
        {
          "labels": ["Article"],
          "property": "url",
          "type": "UNIQUE"
        }
      ],
      "relationships": []
    },
    "seeds": ["articles.cypher"]
  }