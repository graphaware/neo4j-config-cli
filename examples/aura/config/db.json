{
  "kind": "Database",
  "name": "neo4j",
  "dropIfExists": false,
  "skipCreate": true,
  "indexes": {
    "fulltext" : [
      {
        "labels": ["Person"],
        "properties": ["name"],
        "name": "Person"
      }
    ]
  },
  "constraints": {
    "unique": [
      {
        "label": "Movie",
        "property": "title"
      }
    ]
  },
  "seeds": ["movies.cypher"]
}